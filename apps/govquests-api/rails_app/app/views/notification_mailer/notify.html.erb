<div class="email-container">
      <!-- Title -->
  <h1 class="email-title">
        <%= @notification.title %>
      </h1>

      <!-- Content -->
  <div class="email-content">
    <div>
          <%= strip_tags(@notification.content) %>
        </div>

        <% if @notification.cta_text.present? && @notification.cta_url.present? %>
          <div style="text-align: center; margin-top: 24px;">
        <a href="<%= @notification.cta_url %>" class="email-button">
              <%= @notification.cta_text %>
            </a>
          </div>
        <% end %>
      </div>

      <!-- Footer -->
  <div class="email-footer">
    <p>
          You're receiving this email because you're subscribed to GovQuests notifications. You can manage your preferences in the app.
        </p>
      </div>
    </div>